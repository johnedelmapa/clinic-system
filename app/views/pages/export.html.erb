<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%= wicked_pdf_stylesheet_link_tag "dermatology_export" -%>
<div class="container">
    <div id="content">
        <%= wicked_pdf_image_tag 'logo2.png', class: 'pdf-logo' %>
    </div>
    <h2 class="text-center mt-4">Student Information</h2>
    <div class="section-1 basic-information">
        <div class="row">
            <div class="col-12 mt-4">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>Name: <%= @user.firstname + " " +  @user.lastname%></td>
                            <td>Number: <%= @user.phone %></td>
                            <td>Age: <%= ((Date.today.strftime('%Y%m%d').to_i - @user.dob.strftime('%Y%m%d').to_i) / 10000)%></td>
                        </tr>
                        <tr>
                         
                            <td>Department: <% @user.department %></td>
                            <td>Food/drug allergies: <%= @user_appointment.allergies %></td>
                            <td>Complaints  <%= @user_appointment.reasons_for_consultation %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <h2 class="text-center mt-4">Doctor Inputs</h2>
    <div class="section-1 basic-information">
        <div class="row">
            <div class="col-12 mt-4">
                <table class="table">
                    <tbody>
                        <tr>      
                            <td>Assessment: <%= @consultation.assessment %></td>
                            <td>Diagnosis: <%= @consultation.diagnosis %></td>
                            <td>Plan: <%= @consultation.plan %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <h2 class="text-center mt-4">Prescriptions</h2>
    <div class="section-1 basic-information">
        <div class="row">
            <div class="col-12 mt-4">
                <table class="table">
                    <tbody>
                        <% @consultation.prescriptions.each do |pre| %>
                            <tr>      
                                <td><%= pre.name %></td>
                                <td><%= pre.frequency %></td>
                                <td><%= pre.quantity %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

  
</div>